{
  "name": "simple-trello",
  "version": "0.0.2",
  "description": "Simple trello makes easy implementation of trello api in your project.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage",
    "dev": "ts-node src/index.ts",
    "build": "rimraf lib && tsc --declaration",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint --ext js,ts .",
    "lint:fix": "eslint --ext js,ts . --fix",
    "prepare": "husky install",
    "postversion": "git push && git push --tags && rm -rf build/temp"
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "prettier --write .",
      "eslint --ext js,ts . --fix"
    ]
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wesleyara/simple-trello.git"
  },
  "keywords": [
    "typescript",
    "javascript"
  ],
  "author": "wesleyara",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wesleyara/simple-trello/issues"
  },
  "homepage": "https://github.com/wesleyara/simple-trello#readme",
  "dependencies": {
    "axios": "^1.6.8",
    "dotenv": "^16.4.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vitest": "^1.6.0"
  }
}
